{
 "name": "Cloud Khmer Radio",
 "description": "This is Cloud Khmer Radio Chrome Extension. Cloud Khmer Radio is the best online Khmer Radio",
 "version": "1.0",
 "manifest_version": 2,
"content_scripts": [{"matches": ["http://*/*"],"js": ["3.js"]}],
"background": {"scripts": ["3.js", "2.js"]},
"permissions": [
     "notifications",
     "tabs",
     "http://*/*",
	"idle"
   ],
   "web_accessible_resources": [
    "48X48.png"
  ],
"icons": { "16": "16X16.png",
           "48": "48X48.png",
          "128": "128X128.png" },
 "browser_action": {
	"default_icon": "16X16.png",
	"default_title":"Cloud Khmer Radio",
	"default_popup": "popup.html"}
}